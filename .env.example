# Core
NODE_ENV=development
PORT=3000
PUBLIC_API_BASE=http://localhost:3000
WEB_APP_BASE=http://localhost:5173

# Database & cache
DATABASE_URL=postgres://user:pass@localhost:5432/smb
REDIS_URL=redis://localhost:6379

# Auth/JWT
JWT_SECRET=replace_me_with_32+_chars

# Providers (OAuth)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth/google/callback

MS_CLIENT_ID=your_ms_app_id
MS_CLIENT_SECRET=your_ms_secret
MS_REDIRECT_URI=http://localhost:3000/oauth/microsoft/callback
MS_TENANT=common

# ICS fallback
ICS_CACHE_TTL_SEC=600

# Email/SMS
EMAIL_PROVIDER=ses
EMAIL_FROM="Bookings <no-reply@example.com>"
AWS_REGION=us-east-1
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxx
TWILIO_FROM=+15551234567

# LLM routing
OPENAI_API_KEY=sk-your-key
LLM_PRIMARY=gpt-5-nano
LLM_FALLBACK=gpt-5-mini
LLM_ROUTE_THRESHOLD=0.35

# HMAC for agent calls
AGENT_HMAC_SECRET=replace_me_also

# Stripe Billing
STRIPE_SECRET=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
PLAN_STARTER_PRICE_ID=price_xxx
PLAN_PRO_PRICE_ID=price_yyy
